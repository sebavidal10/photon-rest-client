{
  "name": "photon-rest-client",
  "displayName": "Photon REST Client",
  "publisher": "sebavidal10",
  "description": "A minimalist, dark-mode REST client for VS Code.",
  "version": "0.0.3",
  "icon": "icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebavidal10/photon-rest-client.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:photon.open",
    "onView:photon-launcher"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "photon.open",
        "title": "Open Photon",
        "category": "Photon"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "photon-explorer",
          "title": "Photon",
          "icon": "resources/photon-icon.svg"
        }
      ]
    },
    "views": {
      "photon-explorer": [
        {
          "id": "photon-launcher",
          "name": "Launcher"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "photon-launcher",
        "contents": "Minimalist REST Client for VS Code.\n[Launch Photon](command:photon.open)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "axios": "^1.13.4"
  }
}
